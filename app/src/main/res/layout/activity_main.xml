            android:maxLines="6"
            android:padding="8dp"
            android:text=""
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnVal1"
            android:onClick="onClick1"
            android:text="1" />

        <Button
            android:onClick="onClick2"
            android:text="2" />

        <Button android:text="3" />

        <Button
            android:onClick="onMultiply"
            android:text="*" />

        <Button android:text="4" />

        <Button android:text="5" />

        <Button android:text="6" />

        <Button
            android:onClick="onSubtract"
            android:text="-" />

        <Button android:text="7" />

        <Button android:text="8" />

        <Button android:text="9" />

        <Button
            android:layout_column="3"
            android:onClick="onDivide"
            android:text="/" />


        <Button
            android:id="@+id/add"
            android:layout_rowSpan="4"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:onClick="onAdd"
            android:text="+" />


        <Button
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0" />

        <Button
            android:onClick="onClear"
            android:text="C" />


        <Button
            android:onClick="onClickOpeningBrace"
            android:text="(" />

        <Button
            android:onClick="onClickClosingBrace"
            android:text=")" />

        <Button
            android:onClick="onBackSpace"
            android:text="âŒ«" />

        <Button
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:onClick="onEquals"
            android:text="=" />

